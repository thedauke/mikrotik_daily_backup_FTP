/system scheduler
add interval=1d name=Daily_Backup on-event="# Get the router's identity & Date\
    \r\
    \n:local identity [/system identity get name]\r\
    \n:local GDate [/system clock get date]\r\
    \n:local Gtime [/system clock get time]\r\
    \n:local date  \"\$GDate-\$Gtime\"\r\
    \n\r\
    \n# Create a backup file\r\
    \n/system backup save dont-encrypt=yes name=\"backup_\$identity\"\r\
    \n# Create a backup file rsc\r\
    \nexport file=\"backup_\$identity.rsc\"\r\
    \n\r\
    \n# Wait for the backup to complete\r\
    \n:local filename \"backup_\$identity.backup\"\r\
    \n:local rscfilename \"backup_\$identity.rsc\"\r\
    \n:delay 5s\r\
    \n\r\
    \n\r\
    \n# Upload the backup to the server\r\
    \n/tool fetch address=10.0.10.3 src-path=\"\$filename\" user=admin passwor\
    d=Kaznetcom12 mode=ftp dst-path=\"/\$filename\" upload=yes\r\
    \n/tool fetch address=10.0.10.3 src-path=\"\$rscfilename\" user=admin pass\
    word=Kaznetcom12 mode=ftp dst-path=\"/\$rscfilename\" upload=yes\r\
    \n\r\
    \n# Log the backup upload\r\
    \n/log info message=\"\$date_Backup uploaded to server: backup_\$identity)\
    \"\r\
    \n" policy=\
    ftp,reboot,read,write,policy,test,password,sniff,sensitive,romon \
    start-date=jan/29/2023 start-time=03:27:57
